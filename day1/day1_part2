def main():
    data = open("day1/input.txt", "r")
    int_data = [int(num) for num in data]

    count = 0
    win_size = 3
    prev_sum = sum(int_data[:win_size])
    for i in range(1, len(int_data)):
        curr_sum = sum(int_data[i : i + win_size])
        if curr_sum > prev_sum:
            count += 1
        prev_sum = curr_sum

    print(count)


if __name__ == "__main__":
    main()
